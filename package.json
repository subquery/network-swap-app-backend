{
  "name": "subquery-network-exchange",
  "version": "0.1.0",
  "description": "This project is for capturing the data for the exchange contract on the subquery kepler network",
  "main": "dist/index.js",
  "scripts": {
    "build": "subql build",
    "prepack": "rm -rf dist && npm run build",
    "test": "jest",
    "codegen": "./node_modules/.bin/subql codegen",
    "start:docker": "docker-compose pull && docker-compose up",
    "check-filters": "node -r ts-node/register/transpile-only ./scripts/checkFilters.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
  },
  "homepage": "https://github.com/subquery/subquery-network-kepler-exchange",
  "files": [
    "dist",
    "schema.graphql",
    "project.yaml"
  ],
  "author": "SubQuery Pte Ltd",
  "license": "MIT",
  "devDependencies": {
    "@polkadot/api": "^8",
    "@subql/cli": "^1.0.0",
    "@subql/types": "^1.0.1-0",
    "@types/bs58": "^4.0.1",
    "@types/js-yaml": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^8.0.1",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@acala-network/type-definitions": "^4.1.5",
    "@subql/acala-evm-processor": "0.0.3-2",
    "@subql/contract-sdk": "0.10.2-0",
    "@types/pino": "^7.0.5",
    "@types/validator": "^13.7.1",
    "bs58": "^4.0.1",
    "pino": "^7.8.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write --config ./.prettierrc"
    ],
    "*.{css,md}": "prettier --write"
  },
  "resolutions": {
    "class-transformer": "0.4.0",
    "ipfs-unixfs": "6.0.6"
  }
}
